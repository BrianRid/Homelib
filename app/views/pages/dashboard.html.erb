<!-- conteneur général de toute la page -->
<div class="container">

  <!-- conteneur de la partie haute -->
  <div class="upper-part">
    <div class="upper left">
      <div class="tab">
        <button class="tablinks btn btn-success" id="defaultOpen" onclick="openCity(event, 'RENTER')" > OPTION 1</button>
        <button class="tablinks btn btn-success" onclick="openCity(event, 'OWNER')" > OPTION 2</button>
      </div>
      <div id="RENTER" class="product-container tabcontent bg-white">
        Propriétaire 1
      </div>
      <div id="OWNER" class="product-container tabcontent bg-white">
        Propriétaire 2
      </div>
    </div>
    <div class="upper right">
      Loyers
    </div>
  </div>

  <!-- Déclarer un sinistre -->
  <div>
    <h2>Il vous arrive un pépin ?</h2>
    <button id="myBtn" type="button" class="btn btn-lg btn-outline-danger">Déclarer un sinistre</button>
  </div>

  <!-- The Modal -->
  <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <div class="modal-header">
        <h2>Déclarer un sinistre</h2>
        <span class="close">&times;</span>
      </div>
      <div class="modal-body">
        <!-- Display list of incident categories -->
        <%= render 'incidents' %>
        <%= simple_form_for([ @flat, @incident ]) do |form| %>
          <%= form.input :category, collection: Incident::CATEGORIES, include_blank: "Select a category"  %>
          <%= form.button :submit, "Next" %>
        <% end %>
        <div class="progress" style="height: 2px;">
          <div class="progress-bar bg-info" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
      <div class="modal-footer">
        <h3>Modal Footer</h3>
      </div>
    </div>
  </div>

</div>
<!-- END PAGE -->

<!-- Display error -->
<%= render 'incidents/errors', incident: @incident %>

<!-- Tab script -->
<script>
function openCity(evt, cityName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " active";
}
document.getElementById("defaultOpen").click();
</script>
