function createFavorite(innerHTML) {
  const workerFavorite = document.getElementById('<%= @worker.id %>')
  if (workerFavorite) {
    workerFavorite.innerHTML = innerHTML;
  }
}

<%if @user_worker.errors.any? %>
  createFavorite('<%= j render "user_workers/worker_favorite", worker: @worker %>');
<% else %>
  createFavorite('<%= j render "user_workers/worker_favorite", worker: @worker %>');
<% end %>

