<div class="container-fluid">
  <div class="incident-wrapper">
    <div class="incident-left">
      <div class="incident-left-upper">
        <!-- Display the result with all incident informations -->
        <div class="incident-result">
          <h1>Résultats de votre incident</h1>
          <!-- Date -->
          <div class="incident-date">
            <h5><strong>Date de l'incident:</strong></h5>
            <p><%= Date.today.strftime("%d.%m.%Y") %></p>
          </div>
          <!-- Category -->
          <div class="incident-category">
            <h5><strong>Nature de l'intervention:</strong></h5>
            <p><%= @incident.reparation %></p>
          </div>
          <!-- Price -->
          <div class="incident-price">
            <h5><strong>Prix approximatif de l'intervention:</strong></h5>
            <p><%= @incident.tarif %></p>
          </div>
          <!-- Responsability -->
          <div class="incident-responsability">
            <h5><strong>Paiement attribué:</strong></h5>
            <p><%= @incident.responsable %></p>
          </div>
          <!-- Summary -->
          <div class="incident-summary">
            <h5><strong>Votre incident:</strong></h5>
            <% @resume.each do |t| %>
              <p>> <%= Incident::TREE[t][:label] %></p>
              <p><%= Incident::TREE[t][:next_question] %></p>
            <% end %>
          </div>
        </div>
      </div>

      <div class="incident-left-down">
        <button class="btn btn-lg btn-danger" data-toggle="modal" data-target="#exampleModal">Je répare moi-même</button>






        <p>Ou bien je fais appel à un réparateur <i class="fas fa-arrow-right"></i></p>
      </div>
    </div>
    <!-- Display the list of workers -->
    <div class="incident-right">
      <div class="incident-workers">
        <div class="container-fluid">
          <!-- Only Favorite Workers -->
          <h2>Réparateurs selectionnés par votre propriétaire :</h2>
          <ul class="">
            <% @workers_favorite.each_with_index do |worker, idx| %>
              <li>
                <%= render 'workers/card_worker', worker: worker, idx: idx %>
              </li>
            <% end %>
          </ul>
          <!-- Only NONE favorite Workers -->
          <h2>Autres réparateurs selectionnés par nos soins :</h2>
          <ul class="">
            <% @workers_other.each_with_index do |worker, idx| %>
              <li>
                <%= render 'workers/card_worker', worker: worker, idx: idx %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- modale -->
     <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Je valide l'incident
                <button type="button" class="btn btn-primary">Save changes</button>




              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
